#!/bin/sh

if [ "$#" -eq 0 ]
then
  echo "Must supply path for indexed files"
  exit 1
fi

target="$1"

target=${target%/}

for fl in *.xml.gz
do
  base=${fl%.xml.gz}
  if [ -f "$target/$base.e2x.gz" ]
  then
    continue
  fi
  echo "$base"
  gunzip -c "$fl" |
  xtract -mixed -stems -e2index PubmedArticle MedlineCitation/PMID ArticleTitle,Abstract/AbstractText,Keyword |
  gzip -1 > "$target/$base.e2x.gz"
done
